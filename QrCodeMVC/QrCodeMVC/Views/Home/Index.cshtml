@using Microsoft.AspNetCore.Mvc.Rendering
@using Microsoft.AspNetCore.Mvc.ViewFeatures
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

    <p><a asp-controller="QrCodeMVC" asp-action="Generate">Generate QR Code</a></p>
    <p><a asp-controller="QrCodeMVC" asp-action="Read">Read QR Code</a></p>
</div>

/*The asp-controller attribute specifies the name of the controller, and the asp-action attribute specifies the name of the action to link to. When the user clicks on these links, they will be directed to the corresponding actions in the controller.*/
